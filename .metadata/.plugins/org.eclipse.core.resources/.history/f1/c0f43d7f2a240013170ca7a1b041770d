
import java.awt.FlowLayout;
import java.awt.Frame;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Vector;
import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JDialog;


public class Dialog extends java.awt.Dialog implements ActionListener {
	
	Vector a = new Vector();
	Vector b = new Vector();
	Vector c = new Vector();
	
	JComboBox ñ4 = new JComboBox(a);
	JComboBox c2 = new JComboBox(b);
	JComboBox c3 = new JComboBox(c);
	
	JButton save = new JButton("Save ");
	JButton cancel = new JButton("Cancel");

	UserPreferences pref;
	
	public Dialog(Frame fl, String title, boolean modal) {
		super(fl, title, modal);
		setLayout(new FlowLayout());
		setSize(300,200);
		
		add(ñ4);
		add(c2);
		add(c3);
		add(save);
		add(cancel);
		
		c2.addActionListener(this);
		c3.addActionListener(this);
		ñ4.addActionListener(this);
		save.addActionListener(this);
		cancel.addActionListener(this);
		
		a.add("blue");
		a.add("black");
		a.add("red");
		
		b.add("Arial");
		b.add("Calibri");
		b.add("Times New Roman");
		
		
		for(int i = 1; i < 16; i++) {
			c.add(i);
		
		}
		
	

	}
	
	
	

	@Override
	public void actionPerformed(ActionEvent e) {
		
		
	}



}
